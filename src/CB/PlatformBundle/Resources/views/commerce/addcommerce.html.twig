{% extends '::layout.html.twig' %}



{% block name %}

<h1>Veuillez remplir tout les champs necessaire pour mettre en vente votre produit</h1>
<br>
<hr>
<div class="container">
<div class="row">
    <form class="col s6">
        <div class="checkbox">
          <h4>Détail sur le produit</h4>
          <p>Le produit à déjà été utilisé</p><input type="checkbox" id="test1" /><label for="test1"></label>
          <p>Vous accepter les remboursements</p><input type="checkbox" id="test2" /><label for="test2"></label>
          <p>Vous accepter les cheques</p><input type="checkbox" id="test3" /><label for="test3"></label>
        </div>
    </form>
    <form class="col s6">
        <div class="input-field col s6">
          <h6><b>Description de l'objet (50 caratères minimum)</b></h6>
          <textarea id="textarea1" class="materialize-textarea"></textarea>
          <label for="textarea1"></label>
        </div>
    </form>
</div>
<div class="row">
    <form class="col s12">
        <div class="file-field input-field">
          <p>Ajouter une image du produit</p>
          <div class="btn">
            <span>Fichier</span>
            <input type="file">
          </div>
          <div class="file-path-wrapper">
          </div>
        </div>
</div>
<hr>
<div class="row">
    <form class="col s12">
        <h4>Information vendeur</h4>
        <p>Veuillez donnée vos informations de contact</p>
        <div class="input-field col s12">
          <h6>Email</h6>
          <input id="email" type="email" class="validate">
          <label for="email" data-error="wrong" data-success="right"></label>
        </div>

        <div class="input-field col s6">
          <h6>Votre Prénom</h6>
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" type="text" class="validate">
          <label for="icon_prefix"></label>
        </div>

        <div class="input-field col s6">
          <h6>Téléphone</h6>
          <i class="material-icons prefix">phone</i>
          <input id="icon_telephone" type="tel" class="validate">
          <label for="icon_telephone"></label>
        </div>
        </form>
      </div>
</div>

{% endblock %}
