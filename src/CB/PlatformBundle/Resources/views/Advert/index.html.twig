{# src/OC/PlatformBundle/Ressources/views/Advert/index.html.twig #}
{% extends 'CBPlatformBundle::layout.html.twig' %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block cbplatform_body %}
  <h2>Liste des annonces</h2>

  <ul>
    {% for advert in listAdverts %}
        <li>
          <a href="{{ path('cb_platform_view', {'id': advert.id}) }}">{{ advert.title }}</a>
          par {{ advert.author }},
          le {{ advert.date|date('d/m/y') }}
        </li>
        {% else %}
            <li>Pas (encore !) d'annonces</li>
    {% endfor %}
  </ul>
{% endblock %}
